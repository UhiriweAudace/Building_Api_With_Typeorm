{
   "compilerOptions": {
      "lib": ["es5", "es6"],
      "baseUrl": "./src",
      "paths": {
         "@configs/*": ["./configs"],
         "@routes/*": ["./routes"],
         "@controllers/*": ["./controllers/*"],
         "@database/*": ["./database"],
         "@helpers/*": ["./helpers/*"],
         "@entity/*": ["./entity/*"],
      },
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   }
}
